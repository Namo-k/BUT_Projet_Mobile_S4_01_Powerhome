<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/white"/>
            <size
                android:height="40dp"
                android:width="40dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/darkGrey"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/baseline_brightness_high_24"
        android:top="2dp"
        android:right="2dp"
        android:left="2dp"
        android:bottom="2dp"
        />
</layer-list>