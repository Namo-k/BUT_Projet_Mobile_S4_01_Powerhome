                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/grey"
                                    android:textSize="13.5dp"
                                    />


                                <!--<EditText
                                    android:id="@+id/equipement1ET"
                                    android:layout_width="85dp"
