                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="Equipement 3 : "
                                    android:textColor="@color/grey"
                                    android:textSize="13.5dp"
                                    />


                                <EditText
                                    android:id="@+id/equipement3ET"
                                    android:layout_width="85dp"
