                                    android:fontFamily="@font/inter_medium"
                                    android:text="Equipement 2 : "
                                    android:textColor="@color/grey"
                                    android:textSize="13.5dp"
                                    />


                                <EditText
                                    android:id="@+id/equipement2ET"
                                    android:layout_width="85dp"
                                    android:layout_height="23dp"
