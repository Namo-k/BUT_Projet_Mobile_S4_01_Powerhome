<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen"
    tools:context=".app.residence.ResidenceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <!-- ========== PAGE =========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/residence"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/sansita_regular"
                            android:text=" Ma résidence"
                            android:textColor="@color/darkGreen"
                            android:textSize="21dp"
                            />

                        <TextView
                            android:id="@+id/ligne1"
                            android:layout_width="180dp"
                            android:layout_height="1.5dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/lightGrey"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/residence_logo"
                            android:layout_width="42dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_height="42dp"
                            android:src="@drawable/residence_logo"
                            android:layout_gravity="end"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- ========== DEBUT SECTION RESIDENCE =========== -->

                <androidx.cardview.widget.CardView

                    android:id="@+id/blocResidence"
                    android:layout_width="match_parent"
                    android:layout_height="512dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/lightGreen"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/residenceLabelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="Ma résidence :"
                                android:textColor="@color/grey"
                                android:textSize="14.5dp"
                                />

                            <TextView
                                android:id="@+id/residenceTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/residenceLabelTV"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/inter"
                                android:text="Rives de Seine"
                                android:textColor="@color/darkGreen"
                                android:textSize="14.5dp"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="40dp"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/textCreneau"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Choisissez un créneau : "
                            android:textColor="@color/grey"
                            android:textSize="14.5dp" />


                            <TextView
                                android:id="@+id/debutLabelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_below="@+id/textCreneau"
                                android:fontFamily="@font/inter_medium"
                                android:text="De  : "
                                android:textColor="@color/grey"
                                android:textSize="13.5dp"
                                />


                            <EditText
                                android:id="@+id/debutET"
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:layout_toRightOf="@+id/debutLabelTV"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_below="@+id/textCreneau"
                                android:background="@drawable/round_login"
                                android:fontFamily="@font/inter"
                                android:inputType="text"
                                android:textSize="16dp"
                                />

                            <TextView
                                android:id="@+id/finLabelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@id/debutET"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_below="@+id/textCreneau"
                                android:fontFamily="@font/inter_medium"
                                android:text="A : "
                                android:textColor="@color/grey"
                                android:textSize="13.5dp"
                                />


                            <EditText
                                android:id="@+id/finET"
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/finLabelTV"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_below="@+id/textCreneau"
                                android:background="@drawable/round_login"
                                android:fontFamily="@font/inter"
                                android:inputType="text"
                                android:textSize="16dp"
                                />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/btnVerifier"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/darkGreen"
                                app:cardCornerRadius="6dp"
                                android:layout_below="@+id/textCreneau"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@id/finET">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="Vérifier"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />
                            </androidx.cardview.widget.CardView>

                            <!--<ImageView
                                android:id="@+id/graphe"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:layout_below="@id/debutET"
                                />-->


                            <TextView
                                android:id="@+id/consoCreneauLabelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_below="@+id/btnVerifier"
                                android:fontFamily="@font/inter_medium"
                                android:text="Consommation :"
                                android:textColor="@color/grey"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/consoCreneauTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/btnVerifier"
                                android:layout_toRightOf="@+id/consoCreneauLabelTV"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/inter"
                                android:text="20000W"
                                android:textColor="@color/darkGreen"
                                android:textSize="14dp" />


                            <TextView
                                android:id="@+id/msgLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/consoCreneauLabelTV"
                                android:layout_marginStart="3dp"
                                android:textAlignment="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="3dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="Ce créneau est saturé, vous pourrez avoir un malus pour avoir utilisé 3x le même créneau"
                                android:textColor="@color/red"
                                android:textSize="14dp"
                                android:layout_centerHorizontal="true"
                                />


                        <TextView
                            android:id="@+id/listeHabitantsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/msgLabel"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Liste des habitants :"
                            android:textColor="@color/grey"
                            android:textSize="14dp"
                            android:layout_centerHorizontal="true"
                            />

                        <LinearLayout
                            android:id="@+id/listeHabitantSection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_below="@id/listeHabitantsLabel"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center">

                            <ListView
                                android:id="@+id/habitantlistView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:divider="@color/lightGreen"
                                android:dividerHeight="20dp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- ========== FIN PAGE =========== -->

    </LinearLayout>


</FrameLayout>