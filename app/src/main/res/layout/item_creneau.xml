<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="285dp"
    android:layout_height="93dp"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/imgGauche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCreneau"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/rond_vert"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-03-26"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp" />
                <TextView
                    android:id="@+id/heureTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 - 23:00"
                    android:layout_toRightOf="@+id/dateTV"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateTV"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp" >

                    <TextView
                        android:id="@+id/maxWattageTV"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:text="Max wattage : 25000 W"
                        android:fontFamily="@font/inter"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/usedWattageTV"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:text="Consommation utilisÃ©e : 15500 W"
                        android:fontFamily="@font/inter"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>