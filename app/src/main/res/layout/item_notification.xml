<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="285dp"
    android:layout_height="93dp"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/imgGauche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/notification"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/titleNotifTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sélection d'un créneau"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:textSize="12.5dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleNotifTV"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp" >

                    <TextView
                        android:id="@+id/notifTextTV"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:text="Vous avez réservé le créneau de 9h à 15h pour votre EQUIPEMENT. Vous avez gagné/écopé d’1 bonus/malus."
                        android:fontFamily="@font/inter"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>